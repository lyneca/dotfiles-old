[bar/top]
;monitor = eDP-1
monitor = ${env:MONITOR}
width = 100%
height = 27

background = ${colors.background}
foreground = ${colors.foreground}

line-color = ${colors.background}
line-size = 2

spacing = 2
padding-right = 5
module-margin = 4

font-0 = FontAwesome:size=10;0
font-1 = RobotoMono:size=8;1
font-2 = Termsynu:size=8;1

modules-left = i3
modules-right = updates-arch-combined volume wireless-network battery date

[bar/bottom]
;monitor = eDP-1
monitor = ${env:MONITOR}
bottom = true
width = 100%
height = 27

background = ${bar/top.background}
foreground = ${bar/top.foreground}

line-color = ${bar/top.background}
line-size = 3

spacing = 3
padding-right = 4
padding-left = 4
module-margin-left = 2
module-margin-right = 2

font-0 = RobotoMono:size=8;3
font-1 = unifont:size=6;2
font-2 = FontAwesome:size=10;10
font-4 = Termsynu:size=8:antialias=false;0

modules-left = hdd sd tmp cache usb cmus
modules-right = ip cpu memory

wm-restack = i3

