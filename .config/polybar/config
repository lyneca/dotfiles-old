[module/i3]
type = internal/i3
format = <label-state><label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true
pin-workspaces = true

;label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.color06}

label-mode = %name%
label-mode-padding = 2
label-mode-background = ${colors.color04}

label-focused = %name%
label-focused-foreground = ${colors.color04}
label-focused-background = ${colors.background}
label-focused-underline = ${colors.color04}
label-focused-padding = 2

label-unfocused = %name%
label-unfocused-padding = 2

label-visible = %name%
label-visible-underline = ${colors.color04}
label-visible-padding = 2

label-urgent = %index%
label-urgent-foreground = ${colors.color04}
label-urgent-background = ${colors.background}
label-urgent-underline = ${colors.color02}
label-urgent-padding = 2

[module/ip]
type = internal/network
interface = wlp2s0
format-connected = IP  <label-connected>
format-connected-foreground = ${colors.color02}
label-connected = %local_ip%
label-connected-foreground = ${colors.color03}

[module/hdd]
type = custom/script
exec = sh ~/.config/polybar/size.sh /dev/mmcblk0p3 H 16000 20000
interval = 1

[module/sd]
type = custom/script
exec = sh ~/.config/polybar/size.sh /dev/mmcblk1p1 S 10000 14000
interval = 1

[module/tmp]
type = custom/script
exec = sh ~/.config/polybar/size.sh /tmp T 900 1500
interval = 1

[module/cache]
type = custom/script
exec = sh ~/.config/polybar/dirsize.sh ~/.cache C 900 1500
interval = 1

[module/usb]
type = custom/script
exec = sh ~/.config/polybar/usbsize.sh /media/usb U 16000 28000
interval = 1

